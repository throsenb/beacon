<div id="page-header">
    <h1>Status</h1>
</div>

<%= link_to "New Status", new_status_path, class: "btn-primary btn" %>

<% @statuses.each do |status| %> 
  <div class="status">
    <strong> <%= status.name %></strong>
    <p> <%= status.content %> </p>
      <div class="meta">
       <%= link_to time_ago_in_words(status.created_at) + " ago", status %>
         <span class="admin">
            <%= link_to "Edit",edit_status_path(status) %> 
            <%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure you want to delete this status?' } %>
         </span>
       </div> 
  </div> 

<% end %> 


<table class="table table-condensed" style="display:none;">

  <tr>
    <th>Name</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @statuses.each do |status| %>
  <tr>
    <td><%= status.name %></td>
    <td><%= status.content %></td>
    <td><%= link_to 'Show', status %></td>
    <td><%= link_to 'Edit', edit_status_path(status) %></td>
    <td><%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

